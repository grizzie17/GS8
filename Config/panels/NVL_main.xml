<?xml version="1.0"?>
<Panel id="NVL_main" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="panels.xsd">
	<!-- Define the menu items -->

	<!-- Video feeds -->
	<GaugeInstance Name="NVL_view-select" X="0" Y="0" />
	<GaugeInstance Name="NVL_view-layout" X="0" Y="0" />
	<GaugeInstance Name="NVL_Event_Handlers_Camera_Select" X="0" Y="0" />

	<!-- Define the button assignments -->
	<KeyEventMap>
		<OnDown>
			<Key id="UP" Event="E:NVL CAMERA SELECT UP"/>
			<Key id="DOWN" Event="E:NVL CAMERA SELECT DOWN"/>
			<Key id="LEFT" Event="E:NVL CAMERA SELECT LEFT"/>
			<Key id="RIGHT" Event="E:NVL CAMERA SELECT RIGHT"/>
			<Key id="ENTER" Event="E:MENU PANEL"/>
		</OnDown>
	</KeyEventMap>

</Panel>
