<?xml version="1.0"?>
<Panel id="MO_driver" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="panels.xsd">
	<Layout>
		<Script>
			(S:SCREEN HEIGHT) 7 / s10		// Height of button area
			r10 3 * 4 / s11						// center of button area
			both
			
			5 s0	// left screen margin
			both
			
			"Driver Panel" (?C:Window Title)
			both
		</Script>
	</Layout>
	<GaugeInstance Name="icon-yogi" X="200" Y="200"/>
	<GaugeInstance Name="color-theme" X="(S:SCREEN WIDTH) width -" Y="r10 4 * r11 + "/>
	<!-- Video feeds -->
	<GaugeInstance Name="MO_view-select" X="0" Y="0" />
	<GaugeInstance Name="MO_view-layout" X="0" Y="0" />

	<!-- Define the BEZEL buttons -->
	<!--<GaugeInstance Name="button-autosteer" X="5" Y="r10 0 * r11 + height 2 / -"/>-->
	<GaugeInstance Name="button-gauge_state" X="5" Y="r10 0 * r11 + "/>
	<GaugeInstance Name="button-gauge_detail" X="5" Y="r10 1 * r11 + "/>
	<GaugeInstance Name="button-screen_mode" X="5" Y="r10 2 * r11 + "/>
	<!--GaugeInstance Name="button-shutdown" X="5" Y="r10 4 * r11 + height 2 / -"/-->
	<GaugeInstance Name="button-seat_position" X="5" Y="r10 5 * r11 + "/>
	
	<GaugeInstance Name="button-daynight" X="(S:SCREEN WIDTH) width -" Y="r10 0 * r11 + "/>
	<GaugeInstance Name="button-units" X="(S:SCREEN WIDTH) width -" Y="r10 1 * r11 + "/>
	<!--GaugeInstance Name="button-adjust-camera" X="(S:SCREEN WIDTH) width -" Y="r10 5 * r11 + height 2 / -"/-->
	<GaugeInstance Name="monitor_edit_camera_events" />

	
	<!-- Speedometer/RPM -->
	<GaugeInstance Name="speed"
				   X="(S:SCREEN WIDTH) width - 2 /" Y="(S:SCREEN HEIGHT) height -" />
	
	<!-- heading -->
	<GaugeInstance Name="compass"
				   X="(S:SCREEN WIDTH) width - 2 /" Y="0" />
	<!--GaugeInstance Name="steeringangle"
				   X="62" Y="2" /-->

<!-- time/lat-lon      NOTE: The entry "60 -" is used to move the gauge from the BEZEL button text -->
	<GaugeInstance Name="time"
				   X="(S:SCREEN WIDTH) width - 20 - 60 -" Y="5" />
	<GaugeInstance Name="latlong"
				   X="(S:SCREEN WIDTH) width - 20 - 60 -" Y="25" />

	<!-- transmission selection (PRND) -->
	<GaugeInstance Name="transmission-selector" 
				   X="(S:SCREEN WIDTH) 2 / 50 +" Y="(S:SCREEN HEIGHT) height - 5 -" />

	<!-- Every where you see " 60 +" in the X position is an attempt to relocate a gauge so that the BEZEL button text can be displayed. -->
	<GaugeInstance Name="@alert-everything"
				   X="5 60 +" Y="(S:SCREEN HEIGHT) height - 5 -" />

	<GaugeInstance Name="icon-fuel"
				   X="10 60 +" Y="40" />
	<GaugeInstance Name="slider-fuel"
					X="50 60 +" Y="30" />
	<GaugeInstance Name="slider-engine-coolant-temp"
					X="77 60 +" Y="30" />
	<GaugeInstance Name="icon-temperature-coolant"
				   X="105 60 +" Y="40" />

	<GaugeInstance Name="icon-engine-oil-pressure"
				   X="3 60 +" Y="150" />
	<GaugeInstance Name="slider-engine-oil-pressure"
					X="50 60 +" Y="130" />
	<GaugeInstance Name="slider-engine-oil-temp"
					X="77 60 +" Y="130" />
	<GaugeInstance Name="icon-temperature-oil"
				   X="105 60 +" Y="140" />

	<GaugeInstance Name="icon-trans-oil-pressure"
				   X="3 60 +" Y="250" />
	<GaugeInstance Name="slider-trans-oil-pressure"
					X="50 60 +" Y="230" />
	<GaugeInstance Name="slider-trans-oil-temp"
					X="77 60 +" Y="230" />
	<GaugeInstance Name="icon-temperature-trans"
				   X="105 60 +" Y="240" />

	<GaugeInstance Name="icon-battery"
				   X="10 60 +" Y="350" />
	<GaugeInstance Name="slider-battery-voltage"
				   X="50 60 +" Y="330" />

	<GaugeInstance Name="shuttingdown"
				   X="(S:SCREEN WIDTH) width - 2 /"
				   Y="(S:SCREEN HEIGHT) height - 2 /"/>
	
	<!--<GaugeInstance Name="touch-recalibrate" />-->

	<!-- Define the button assignments -->
	<KeyEventMap>
		<OnDown>
			<Key id="BEZEL1" Event="E:TOGGLE GAUGE STATE" />
			<Key id="BEZEL2"	Event="E:TOGGLE GAUGE DETAIL" />
			<Key id="BEZEL3" Event="E:TOGGLE SCREEN MODE" />
			<!--Key id="BEZEL5" Event="E:VEHICLE SHUTDOWN" /-->
			<Key id="BEZEL6" Event="E:TOGGLE SEAT POSITION" />
			<Key id="BEZEL7" Event="E:TOGGLE DAYNIGHT" />
			<Key id="BEZEL8"	Event="E:TOGGLE UNITS" />
			<Key id="BEZEL11"	Event="E:TOGGLE COLOR THEME" />
			<Key id="BEZEL14" Event="E:DUMP DICTIONARY" />
			<!--Key id="BEZEL12" Event="E:TOGGLE ADJUST CAMERA SETTINGS" /-->
			<Key id="F1" Event="E:TOGGLE AUTO STEER" />
			<Key id="F2" Event="E:TOGGLE GAUGE STATE" />
			<Key id="F3" Event="E:TOGGLE SCREEN MODE" />
			<Key id="F7" Event="E:TOGGLE SEAT POSITION" />
		</OnDown>
	</KeyEventMap>

</Panel>
