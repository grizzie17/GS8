<?xml version="1.0" ?>
<Gauge Name="sliderhider" Version="1.0">
	<Size X="200" Y="40" />
	<Visible>(T:SLIDER.YELLOW) (T:PULSER) &lt;</Visible>
	<Element>
		<Position X="(S:SCREEN WIDTH) 240 - 14 +" Y="(S:SCREEN HEIGHT) 60 -" />
		<Element>
			<Polyline LineWidth="3" LineColor=" 'green' 'darkorange' (T:PULSER) (T:SLIDER.YELLOW) &lt; ? 'red' (T:PULSER) (T:SLIDER.RED) &lt; ? s9">
				<Point X="0" Y="0" />
				<Point X="(T:SLIDER.YELLOW) 2 *" Y="0" />
				<Point X="(T:SLIDER.RED) 2 *" Y="10" />
				<Point X="200" Y="10" />
				<Point X="200" Y="20" />
				<Point X="0" Y="20" />
				<Point X="0" Y="0" />
			</Polyline>
		</Element>
		<Element>
			<GaugeText X="0" Y="-5" Align="right" VerticalAlign="top" Font="Arial" Height="28" LineColor="r9">
				<String>OIL </String>
			</GaugeText>
		</Element>
		<Element>
			<Position X="0" Y="5" />
			<Shift Y="0" X="(T:PULSER)  2.0f *" />
			<Polygon FillColor=" 'limegreen' 'orange' (T:PULSER) (T:SLIDER.YELLOW) &lt; ? 'red' (T:PULSER) (T:SLIDER.RED) &lt; ?">
				<Point Y="0" X="0" />
				<Point Y="20" X="-6" />
				<Point Y="20" X="6" />
				<Point Y="0" X="0" />
			</Polygon>
		</Element>
	</Element>
</Gauge>