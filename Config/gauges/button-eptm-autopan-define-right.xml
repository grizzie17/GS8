<?xml version="1.0"?>
<SimBase.Document Type="AceXML" version="1,0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="Gauges.xsd">
	<SimGauge.Gauge id="button-eptm">
		<Update>
			<Script>
				// Define the button text
				"AutoPan" s6
				"Define" s7	both
				"Right" s8 both

				// Define the button text colors
				(U:COLOR_ButtonText)  s1 s2 s3 both

				(U:EPTM FLAGS) (K:EPTM SCAN ACTIVE) BITAND 0 EQ s0 both
			</Script>
		</Update>
		<Size>70,60</Size>
		<Element>
			<Include File="icon-text" />
		</Element>
		<MouseArea id="MouseArea">
			<Visibility>
				(U:EPTM FLAGS) (K:EPTM SCAN ACTIVE) BITAND 0 EQ
			</Visibility>
			<FloatPosition>0.000,0.000</FloatPosition>
			<Size>70,60</Size>
			<MouseClick id="MouseClick">
				<KeyEvent>E:EPTM AUTOPAN DEFINE RIGHT</KeyEvent>
			</MouseClick>
		</MouseArea>
	</SimGauge.Gauge>
</SimBase.Document>
