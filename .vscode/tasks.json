{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"options": {
		"env": {
			"__STDC_WANT_SECURE_LIB__": "1"
		}
	},
	"tasks": [
		//{
		//	"label": "Hello",
		//	"type": "shell",
		//	"command": "echo",
		//	"args": ["Hello"],
		//	"problemMatcher": []
		//},
		{
			"label": "pwd",
			"type": "shell",
			"command": "pwd",
			"problemMatcher": []
		},
		{
			"label": "c++ predefined variables",
			"type": "shell",
			"command": "echo | x86_64-pc-msys-gcc -xc++ -dM -E -mwindows - | sort",
			//"args": ["${env:CONFNAME}"],
			"problemMatcher": []
		},
		{
			"label": "c++ predefined include paths",
			"type": "shell",
			"command": "echo | gcc -xc++ -E -v - ",
			//"args": ["${env:CONFNAME}"],
			"problemMatcher": []
		},
		{
			"label": "build-config",
			"type": "shell",
			"command": "./build-config.sh",
			"group": "build",
			"problemMatcher": {
				"pattern": {
					"regexp": "^([^:]+):\\s+([^:]+):\\s+(.*)$",
					"file": 1,
					"severity": 2,
					"message": 3
				}
			}
		},
		{
			"label": "build-clean",
			"type": "shell",
			"command": "./build-clean.sh",
			"group": "build",
			"problemMatcher": []
		},
		{
			"label": "build",
			"type": "shell",
			"command": "./build.sh",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": {
				"pattern": {
					"regexp": "^([^:]+):([0-9]+):([0-9]+):\\s+([^:]+):\\s+(.*)$",
					"file": 1,
					"line": 2,
					"column": 3,
					"severity": 4,
					"message": 5
				}
			}
		},
		{
			"label": "build <currentfile>",
			"type": "shell",
			"command": "./build.sh",
			"args": [
				"${relativeFile}"
			],
			"group": "build",
			"problemMatcher": {
				"owner": "cpp",
				"fileLocation": [ "relative", "${workspaceFolder}" ],
				"pattern": {
					"regexp": "^([^:]+):([0-9]+):([0-9]+):\\s+([^:]+):\\s+(.*)$",
					"file": 1,
					"line": 2,
					"column": 3,
					"severity": 4,
					"message": 5
				}
			}
		},
		{
			"label": "build  --check",
			"type": "shell",
			"command": "./build.sh",
			"args": [
				"${relativeFile}",
				"-check"
			],
			"group": "build",
			"problemMatcher": {
				"pattern": {
					"regexp": "^([^:]+):([0-9]+):([0-9]+):\\s+([^:]+):\\s+(.*)$",
					"file": 1,
					"line": 2,
					"column": 3,
					"severity": 4,
					"message": 5
				}
			}
		}
	]
}
