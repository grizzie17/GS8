{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Hello",
			"type": "shell",
			"command": "echo",
			"args": ["Hello"],
			"problemMatcher": []
		},
		{
			"label": "pwd",
			"type": "shell",
			"command": "pwd",
			"problemMatcher": []
		},
		{
			"label": "path",
			"type": "shell",
			"command": "echo",
			"args": ["$PATH"],
			"problemMatcher": []
		},
		{
			"label": "autoconf",
			"type": "shell",
			"command": "autoreconf ../configure.ac",
			"problemMatcher": "$gcc",
			"options": {
				"cwd": "${workspaceRoot}/build"
			}
		},
		{
			"label": "make",
			"type": "shell",
			"command": "make",
			"args": [
				"-f","Makefile.mk"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$gcc"
			],
			"options": {
				"cwd": "${workspaceRoot}"
			}
		}
	]
}