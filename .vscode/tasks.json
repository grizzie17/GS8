{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"options": {
		"env": {
			"__STDC_WANT_SECURE_LIB__": "1"
		}
	},
	"tasks": [
		//{
		//	"label": "Hello",
		//	"type": "shell",
		//	"command": "echo",
		//	"args": ["Hello"],
		//	"problemMatcher": []
		//},
		{
			"label": "pwd",
			"type": "shell",
			"command": "pwd",
			"problemMatcher": []
		},
		{
			"label": "CONFNAME",
			"type": "shell",
			"command": "echo ${env:CONFNAME}",
			//"args": ["${env:CONFNAME}"],
			"problemMatcher": []
		},
		{
			"label": "c++ predefined variables",
			"type": "shell",
			"command": "echo | c++ -dM -E - | sort",
			//"args": ["${env:CONFNAME}"],
			"problemMatcher": []
		},
		{
			"label": "c++ predefined include paths",
			"type": "shell",
			"command": "echo | gcc -xc++ -E -v - ",
			//"args": ["${env:CONFNAME}"],
			"problemMatcher": []
		},
		{
			"label": "autoheader",
			"type": "shell",
			"command": "autoheader",
			"group": "build",
			"problemMatcher": {
				"pattern": {
					"regexp": "^([^:]+):([0-9]+):\\s+(.*)$",
					"file": 1,
					"line": 2,
					"message": 3
				}
			}
		},
		{
			"label": "configure",
			"type": "shell",
			"command": "./build-config.sh",
			"group": "build",
			// "options": {
			// 	"env":{
			// 		"WIN64": "1",
			// 		"_WIN64": "1"
			// 	}
			// },
			"problemMatcher": {
				"pattern": {
					"regexp": "^([^:]+):\\s+([^:]+):\\s+(.*)$",
					"file": 1,
					"severity": 2,
					"message": 3
				}
			}
		},
		{
			"label": "clean-objects",
			"type": "shell",
			"command": "make",
			"args": ["clean"],
			"group": "build",
			"options": {
				"cwd": "build"
			},
			"problemMatcher": []
		},
		{
			"label": "clean",
			"type": "shell",
			"command": "./build-clean.sh",
			"group": "build",
			"problemMatcher": []
		},
		{
			"label": "build",
			"type": "shell",
			"command": "./build.sh",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": {
				"pattern": [
					{
						"regexp": "^([^:]+):([0-9]+):([0-9]+):\\s+([^:]+):\\s+(.*)$",
						"file": 1,
						"line": 2,
						"column": 3,
						"severity": 4,
						"message": 5
					}
				]
			}
		}
	]
}