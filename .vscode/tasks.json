{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Hello",
			"type": "shell",
			"command": "echo",
			"args": ["Hello"],
			"problemMatcher": []
		},
		{
			"label": "pwd",
			"type": "shell",
			"command": "pwd",
			"problemMatcher": []
		},
		{
			"label": "path",
			"type": "shell",
			"command": "echo",
			"args": ["$PATH"],
			"problemMatcher": []
		},
		{
			"label": "build-clean",
			"type": "shell",
			"command": "./build-clean.sh",
			"problemMatcher": []
		},
		{
			"label": "m4-dir",
			"type": "shell",
			"command": "mkdir",
			"args": ["-p","m4"],
			"problemMatcher": []
		},
		{
			"label": "b-aclocal",
			"dependsOn": "m4-dir",
			"type": "shell",
			"command": "aclocal",
			"args": ["-I","m4","--install"],
			"problemMatcher": []
		},
		{
			"label": "b-autoconf",
			"dependsOn": "b-aclocal",
			"type": "shell",
			"command": "autoconf",
			"args": ["-f"],
			"problemMatcher": []
		},
		{
			"label": "b-automake",
			"dependsOn": "b-autoconf",
			"type": "shell",
			"command": "automake",
			"args": ["--add-missing"],
			"problemMatcher": []
		},
		{
			"label": "b-dir",
			"type": "shell",
			"command": "mkdir",
			"args": ["-p","build"],
			"problemMatcher": []
		},
		{
			"label": "build-configure",
			"dependsOn": ["b-dir","b-automake"],
			"type": "shell",
			"command": "../configure",
			"options": {
				"cwd": "build"
			},
			"group": "build",
			"problemMatcher": []
		},
		{
			"label": "make",
			"type": "shell",
			"command": "make",
			"options": {
				"cwd": "build",
				"env": {
					"__STDC_SECURE_LIB__": "20111231"
				}
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$gcc"
			],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "dedicated"
			}
		}
	]
}